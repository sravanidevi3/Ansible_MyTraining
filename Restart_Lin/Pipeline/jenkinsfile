pipeline{
    agent any
          stages{
             stage ( 'Restarting Linux service' ){
                  steps {
                      sh "docker exec ansible sh -c 'echo '[linux]' > /ansible_playbooks/workspace/${job_name}/Restart_Lin/inventory.txt' "
                      sh "docker exec ansible sh -c 'echo 'Host' >> /ansible_playbooks/workspace/${job_name}/Restart_Lin/inventory.txt' "
                      sh "docker exec ansible sh -c 'echo $Service_name > /ansible_playbooks/workspace/${job_name}/Restart_Lin/service_name.txt
                      sh "docker exec ansible sh -c 'ansible-playbook /ansible_playbooks/workspace/${job_name}/Restart_Lin/playbooks/Restart.yml -i /ansible_playbooks/workspace/${job_name}/Restart_Lin/inventory.txt --vault-password-file=/ansible_playbooks/sravsautomation/configuration/vault-pass --extra-vars 'Service_name=${Service_name}' '"
        
                   }
                 }
               }
         }     
     
